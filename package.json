{
  "name": "hylo-vscode",
  "displayName": "Hylo",
  "description": "VSCode extension for Hylo language",
  "icon": "icons/colored-dark.png",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "extensionKind": [
    "ui",
    "workspace"
  ],
  "publisher": "hylo",
  "repository": {
    "type": "git",
    "url": "https://github.com/tothambrus11/vscode-hylo"
  },
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "hylo",
        "aliases": [
          "Hylo",
          "hylo"
        ],
        "extensions": [
          ".hylo"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./icons/colored-light.png",
          "dark": "./icons/colored-dark.png"
        }
      }
    ],
    "capabilities": {
      "documentSymbolProvider": "true"
    },
    "grammars": [
      {
        "language": "hylo",
        "scopeName": "source.hylo",
        "path": "./syntaxes/hylo.tmLanguage.json"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "hylo",
          "title": "Hylo",
          "icon": "icons/toolbar-icon.svg"
        }
      ]
    },
    "views": {
      "hylo": [
        {
          "id": "hylo.ast-explorer",
          "name": "Hylo AST Explorer",
          "type": "webview"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.16.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.7.2",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@vscode-elements/elements": "^1.9.0",
    "@vscode/codicons": "^0.0.36"
  }
}
